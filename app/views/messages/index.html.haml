.chat
  = render 'chat-side'
  .chat-main
    .chat-header
      = render partial: 'group', collrction: @groups
      .chat-header--right
        =link_to edit_group_path(@group) do
          .button Edit
    .chat__message--display
      = render partial: 'message', collrction: @messages
    .chat__message--input
      = form_for [@group, @message] do |f|
        .message-body
          = f.text_field :body, placeholder: "メッセージを入力してください", class: "message-type" 
          %label.chat-footer__file
            = f.file_field :image
            %i.fa.fa-image
        = f.submit "Send", class: "send-button" 
