.chat
  .chat-side
    .chat__user
      %p= current_user.name
      = link_to edit_user_registration_path do
        %i.fa.fa-cog.icon-cog
      = link_to new_group_path do
        %i.fa.fa-edit.icon-edit
    .chat__group-name
      .user-name shirasaka
      .user-text 先が遠い
  .chat-main
    .chat-header
      .chat-header--left
        %p sample group
        .group-members hayato shirasaka
      .chat-header--right
        .button Edit
    .chat__message--display
    - @group.messages.each do |message|
      .message-user 
        - @group.users.each do |user|
          = user.name
      .message-time 
        = message.created_at
      .message-text
        = message.body
    .chat__message--input
      = form_for [@group, @message] do |f|
        .message-body
          = f.text_field :body, placeholder: "メッセージを入力してください", class: "message-type" do
            %i.fa.fa-icon.photo
        = f.submit "Send", class: "send-button" 
