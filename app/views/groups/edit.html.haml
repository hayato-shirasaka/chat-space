.chat-group-form
  %h1 チャットグループ編集
  = form_for @group, html: {class: "edit_chat_group", id:"edit_chat_group"} do |f|
    = render partial: "common/error", locals: {error: @group.errors }
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :グループ名, class: 'chat-group-form__label', id: 'chat_group_name'
      .chat-group-form__field--right
        = f.text_field :name, placeholder:"グループ名を入力してください", class: 'chat-group-form__input', id:'chat_group_name'
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :チャットメンバーを追加, class: 'chat-group-form__label', id: "chat_group_チャットメンバーを追加"
      .chat-group-form__field--right
        .chat-group-form__search.clearfix
          = f.text_field :groups_users, placeholder: "追加したいユーザー名を入力してください", id: 'user-search-field', class: 'chat-group-form__input'
        #user-search-result
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit :Save, name:'commit', value: 'Save', class: 'chat-group-form__action-btn', disable_with: 'Save'


