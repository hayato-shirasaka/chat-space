.chat
  .chat-side
    .chat__user
      %p= current_user.name
      = link_to edit_user_registration_path do
        %i.fa.fa-cog.icon-cog
      = link_to new_group_path do
        %i.fa.fa-edit.icon-edit
    .chat__groups
      -  current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group-link
            .group-name= group.name
            .group-text
